# SpoqPlus 안면인식 시스템 환경 설정 예시
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요
# cp .env.example .env

# ==============================================================================
# 서버 설정
# ==============================================================================
FACE_HOST=0.0.0.0              # 서버 바인딩 주소
FACE_PORT=5002                 # 서버 포트 (기본: 5002)
FACE_DEBUG=false               # 디버그 모드 (개발: true, 운영: false)
FLASK_ENV=production           # 환경 설정 (development/production)

# ==============================================================================
# 데이터베이스 설정
# ==============================================================================
# 데이터베이스 타입 선택 (mariadb 또는 mssql)
DB_TYPE=mariadb

# ------------------------------------------------------------------------------
# MariaDB/MySQL 설정 (DB_TYPE=mariadb)
# ------------------------------------------------------------------------------
DB_HOST=192.168.0.48           # MariaDB 서버 주소
DB_USER=root                   # MariaDB 사용자
DB_PASSWORD=spoqdb11           # MariaDB 비밀번호
DB_NAME=spoqplusdb             # 데이터베이스 이름

# ------------------------------------------------------------------------------
# MSSQL 설정 (DB_TYPE=mssql)
# ------------------------------------------------------------------------------
MSSQL_SERVER=localhost         # MSSQL 서버 주소
MSSQL_DATABASE=spoqplus        # 데이터베이스 이름
MSSQL_USERNAME=sa              # MSSQL 사용자
MSSQL_PASSWORD=your_password   # MSSQL 비밀번호
MSSQL_DRIVER=ODBC Driver 17 for SQL Server  # ODBC 드라이버
MSSQL_PORT=1433                # MSSQL 포트
MSSQL_TIMEOUT=10               # 연결 타임아웃 (초)
MSSQL_ENCRYPT=yes              # 암호화 사용 여부
MSSQL_TRUST_CERT=yes           # 인증서 신뢰 여부

# ==============================================================================
# 안면인식 설정
# ==============================================================================
FACE_THRESHOLD=0.6             # 얼굴 인식 임계값 (0.0-1.0)
LIVENESS_THRESHOLD=0.6         # 생체 감지 임계값 (0.0-1.0)
QUALITY_THRESHOLD=0.7          # 이미지 품질 임계값 (0.0-1.0)
GLASSES_THRESHOLD=0.7          # 안경 감지 임계값 (0.0-1.0)

# ==============================================================================
# 보안 설정
# ==============================================================================
MAX_FACES=1                    # 최대 감지 얼굴 수
MIN_FACE_SIZE=0.1              # 최소 얼굴 크기 (화면 비율)
MAX_FACE_SIZE=0.8              # 최대 얼굴 크기 (화면 비율)
SECURITY_LEVEL=3               # 보안 레벨 (1-3)
MAX_ATTEMPTS=3                 # 최대 인식 시도 횟수
SESSION_TIMEOUT=1800           # 세션 타임아웃 (초, 30분)

# ==============================================================================
# 파일 경로 설정
# ==============================================================================
UPLOAD_FOLDER=./uploads        # 업로드 폴더
LOG_FOLDER=./logs              # 로그 폴더
MODEL_FOLDER=./models          # 모델 폴더
TEMP_FOLDER=./temp             # 임시 폴더

# ==============================================================================
# 로깅 설정
# ==============================================================================
LOG_LEVEL=INFO                 # 로그 레벨 (DEBUG/INFO/WARNING/ERROR)
LOG_FILE_ENABLED=true          # 파일 로깅 활성화
LOG_MAX_SIZE=10                # 로그 파일 최대 크기 (MB)
LOG_BACKUP_COUNT=5             # 백업 파일 수

# ==============================================================================
# 성능 설정
# ==============================================================================
CACHE_SIZE=1000                # 얼굴 데이터 캐시 크기
PROCESSING_TIMEOUT=30          # 처리 타임아웃 (초)
MEMORY_LIMIT=512               # 메모리 제한 (MB)
CPU_CORES=0                    # CPU 코어 수 (0=자동)

# ==============================================================================
# API 설정
# ==============================================================================
CORS_ORIGINS=*                 # CORS 허용 오리진
RATE_LIMIT=100                 # 분당 요청 수 제한
RESPONSE_TIMEOUT=10            # 응답 타임아웃 (초)