# SPOQ Plus Web Application Dockerfile
FROM php:8.0-fpm-alpine

# 메타데이터
LABEL maintainer="SPOQ Plus Team"
LABEL description="SPOQ Plus Web Application"

# 필수 패키지 설치
RUN apk add --no-cache \
    nginx \
    supervisor \
    curl \
    zip \
    unzip \
    git \
    oniguruma-dev \
    libpng-dev \
    libjpeg-turbo-dev \
    freetype-dev \
    icu-dev \
    libzip-dev \
    mysql-client \
    nodejs \
    npm

# PHP 확장 설치
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install \
        pdo \
        pdo_mysql \
        mysqli \
        mbstring \
        exif \
        pcntl \
        bcmath \
        gd \
        intl \
        zip \
        opcache

# Composer 설치
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# 작업 디렉토리 설정
WORKDIR /var/www/html

# 애플리케이션 파일 복사
COPY . .

# 디렉토리 권한 설정
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html \
    && chmod -R 777 /var/www/html/writable

# Composer 의존성 설치 (프로덕션)
RUN composer install --no-dev --optimize-autoloader --no-interaction

# PHP 설정
COPY cloud-infrastructure/docker/config/php.ini /usr/local/etc/php/conf.d/custom.ini

# Nginx 설정
COPY cloud-infrastructure/docker/config/nginx.conf /etc/nginx/nginx.conf
COPY cloud-infrastructure/docker/config/site.conf /etc/nginx/conf.d/default.conf

# Supervisor 설정
COPY cloud-infrastructure/docker/config/supervisord.conf /etc/supervisord.conf

# 헬스체크 스크립트
COPY cloud-infrastructure/docker/scripts/healthcheck.sh /usr/local/bin/healthcheck
RUN chmod +x /usr/local/bin/healthcheck

# 포트 노출
EXPOSE 80 443

# 헬스체크
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD /usr/local/bin/healthcheck || exit 1

# 시작 명령
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisord.conf"]